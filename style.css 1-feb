/* Adaptacion al móvil */
@media (max-width: 768px) {

  /* Elimina padding lateral global */
  body {
    padding-top: 110px;
  }

  /* Título principal */
  #titulo-principal {
    padding-left: 20px;
    padding-right: 20px;
    font-size: 26px;
    text-align: left;
  }

  /* Contenedor principal: columnas → una debajo de otra */
  #contenedor-flex {
    flex-direction: column;
    padding-left: 20px;
    padding-right: 20px;
    gap: 40px;
    margin-top: 30px;
  }

  /* Columna izquierda y derecha ocupan todo el ancho */
  #columna-izquierda,
  #columna-derecha {
    margin-right: 0;
    flex: none;
    width: 100%;
  }

  /* Inputs más grandes y fluidos */
  input[type="number"] {
    width: 100%;
    max-width: none;
  }

  .ecuacion {
    gap: 1.5em;
    flex-wrap: wrap;
  }

  /* Resultado e historial más anchos */
  #resultado,
  #historial {
    max-width: 100%;
  }

  /* Explicación derecha */
  #bloque-explicacion {
    max-height: none;
    padding-bottom: 120px;
  }

  /* Mascota ajustada para móvil */
  #mascota-explicacion {
    width: 140px;
    right: -10px;
    bottom: -20px;
  }

  /* Formulario */
  #contactar {
    padding: 40px 20px;
  }

  .itemform {
    grid-template-columns: 1fr;
    gap: 10px;
  }

  input[type="submit"] {
    justify-self: center;
    width: 100%;
  }
}
